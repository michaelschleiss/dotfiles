{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "BASH_ENV": "/Users/michael/.bash_profile",
    "ANTHROPIC_CUSTOM_HEADERS": "anthropic-beta: context-management-2025-06-27",
    "DISABLE_TELEMETRY": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_BUG_COMMAND": "1",
    "CLAUDE_CODE_DISABLE_FEEDBACK_SURVEY": "1",
    "SERENA_HOME": "/Users/michael/.config/serena",
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(timeout 8 python:*)"
    ],
    "deny": [],
    "ask": [],
    "defaultMode": "default"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${XDG_CONFIG_HOME:-$HOME/.config}/claude/hooks/gsudo-hook.sh"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "ralph-loop@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "atlassian@claude-plugins-official": true,
    "huggingface-skills@claude-plugins-official": true,
    "pr-review-toolkit@claude-plugins-official": true,
    "claude-md-management@claude-plugins-official": true,
    "claude-code-setup@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true,
    "clangd-lsp@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true,
    "hookify@claude-plugins-official": true,
    "explanatory-output-style@claude-plugins-official": true,
    "learning-output-style@claude-plugins-official": true,
    "rust-analyzer-lsp@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true,
  "teammateMode": "auto",
  "mcpServers": {
    "paper-search": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/michaelschleiss/paper-search-mcp",
        "python",
        "-m",
        "paper_search_mcp.server"
      ],
      "env": {
        "PATH": "${HOME}/.local/bin:${PATH}"
      }
    }
  }
}
