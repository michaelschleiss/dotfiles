{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "BASH_ENV": "/Users/michael/.bash_profile",
    "ANTHROPIC_CUSTOM_HEADERS": "anthropic-beta: context-management-2025-06-27",
    "DISABLE_TELEMETRY": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_BUG_COMMAND": "1",
    "CLAUDE_CODE_DISABLE_FEEDBACK_SURVEY": "1",
    "SERENA_HOME": "/Users/michael/.config/serena"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(timeout 8 python:*)"
    ],
    "deny": [],
    "ask": [],
    "defaultMode": "default"
  },
  "enabledPlugins": {
    "ralph-loop@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "serena@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true,
  "mcpServers": {
    "paper-search": {
      "command": "uv",
      "args": [
        "run",
        "--from",
        "git+https://github.com/michaelschleiss/paper-search-mcp",
        "-m",
        "paper_search_mcp.server"
      ]
    }
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${XDG_CONFIG_HOME:-$HOME/.config}/claude/hooks/gsudo-hook.sh"
          }
        ]
      }
    ]
  }
}
