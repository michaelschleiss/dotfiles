#!/usr/bin/env bash

script_dir="$(cd $(dirname "${BASH_SOURCE[0]}") && pwd)"
dry="0"

while [[ $# > 0 ]]; do
    if [[ "$1" == "--dry" ]]; then
        dry="1"
    fi
    shift
done

log() {
    if [[ $dry == "1" ]]; then
        echo "[DRY_RUN]: $@"
    else
        echo "$@"
    fi
}

execute() {
    log "execute: $@"
    if [[ $dry == "1" ]]; then
        return
    fi

    "$@"
}

log "----------- dev-env ----------"

cd $script_dir
copy_dir() {
  from=$1
  to=$2

  for dir in "$from"/*/; do
    name=$(basename "$dir")
    if [[ "$name" == "claude" || "$name" == "codex" || "$name" == "gh" ]]; then
      execute rsync -a "$dir" "$to/$name/"
    else
      execute rsync -a --delete "$dir" "$to/$name/"
    fi
  done
}

copy_file() {
  from=$1
  to=$2
  name=$(basename $from)
  execute rm $to/$name
  execute cp $from $to/$name
}

copy_dir config  ${XDG_CONFIG_HOME:-$HOME/.config}
copy_dir local   ${XDG_HOME:-$HOME/.local}
copy_file env/.fdignore $HOME

log "Configuring git to use global ignore"
execute git config --global core.excludesfile ~/.config/git/ignore
log "âœ“ Git global ignore configured"
