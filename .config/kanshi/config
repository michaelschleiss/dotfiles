# Kanshi - automatic display configuration

# External monitor (LG ultrawide) connected - disable internal
profile lg_docked {
    output "LG Electronics LG HDR WQHD 108NTXR8S522" enable mode 3440x1440@99.982Hz position 0,0 scale 1
    output eDP-1 disable
}

# Any other external monitor connected - disable internal
profile generic_docked {
    output eDP-1 disable
}

# No external monitor - use internal only
profile undocked {
    output eDP-1 enable mode 1920x1200@60.003Hz scale 1
}
