#!/usr/bin/env bash
set -euo pipefail
# general libs

# --- helpers ---

# install a package via brew (mac) or apt (linux)
# usage: install <name> [linux-name-if-different]
install() {
  case "$(uname -s)" in
    Darwin) brew install "$1" ;;
    Linux)  sudo apt install -y "${2:-$1}" ;;
  esac
}

# --- main ---

install ripgrep
install fd fd-find
install fzf
